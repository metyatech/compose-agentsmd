{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Compose AGENTS.md ruleset",
  "type": "object",
  "additionalProperties": false,
  "required": ["source"],
  "properties": {
    "source": {
      "type": "string",
      "minLength": 1
    },
    "global": {
      "type": "boolean"
    },
    "output": {
      "type": "string",
      "minLength": 1
    },
    "domains": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "extra": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
