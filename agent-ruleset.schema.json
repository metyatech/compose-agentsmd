{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Compose AGENTS.md ruleset",
  "type": "object",
  "additionalProperties": false,
  "required": ["source"],
  "properties": {
    "source": {
      "type": "string",
      "minLength": 1
    },
    "global": {
      "type": "boolean"
    },
    "output": {
      "type": "string",
      "minLength": 1
    },
    "claude": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "output": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "domains": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "extra": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "budget": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "totalLines": {
          "type": "integer",
          "minimum": 1
        },
        "moduleLines": {
          "type": "integer",
          "minimum": 1
        }
      }
    }
  }
}
