{
  "name": "compose-agentsmd",
  "version": "3.2.7",
  "description": "CLI tools for composing per-project AGENTS.md files from modular rule sets",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metyatech/compose-agentsmd.git"
  },
  "bugs": {
    "url": "https://github.com/metyatech/compose-agentsmd/issues"
  },
  "homepage": "https://github.com/metyatech/compose-agentsmd#readme",
  "keywords": [
    "agents",
    "agentsmd",
    "rules",
    "cli",
    "markdown"
  ],
  "type": "module",
  "bin": {
    "compose-agentsmd": "dist/compose-agents.js"
  },
  "files": [
    "dist",
    "agent-ruleset.schema.json",
    "tools",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write .",
    "lint": "eslint .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "test": "npm run build && node --test",
    "compose": "npm run build && node dist/compose-agents.js",
    "verify": "npm run lint && npm run typecheck && prettier --check . && npm test"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "diff": "^8.0.3"
  }
}
