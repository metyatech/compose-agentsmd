{
  "name": "compose-agentsmd",
  "version": "3.4.2",
  "description": "CLI tools for composing per-project AGENTS.md files from modular rule sets",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metyatech/compose-agentsmd.git"
  },
  "bugs": {
    "url": "https://github.com/metyatech/compose-agentsmd/issues"
  },
  "homepage": "https://github.com/metyatech/compose-agentsmd#readme",
  "keywords": [
    "agents",
    "agentsmd",
    "rules",
    "cli",
    "markdown"
  ],
  "type": "module",
  "bin": {
    "compose-agentsmd": "dist/compose-agents.js"
  },
  "files": [
    "dist",
    "agent-ruleset.schema.json",
    "tools",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . && tsc -p tsconfig.json --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "test": "npm run build && vitest run",
    "verify": "npm run lint && npm run format:check && npm test",
    "compose": "npm run build && node dist/compose-agents.js"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/diff": "^7.0.2",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "diff": "^8.0.3"
  },
  "overrides": {
    "minimatch": "^10.2.2"
  }
}
